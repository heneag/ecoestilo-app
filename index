    <script>
        // A√±adir funci√≥n roundRect al CanvasRenderingContext2D si no existe
        if (!CanvasRenderingContext2D.prototype.roundRect) {
            CanvasRenderingContext2D.prototype.roundRect = function(x, y, width, height, radius) {
                if (width < 2 * radius) radius = width / 2;
                if (height < 2 * radius) radius = height / 2;
                this.beginPath();
                this.moveTo(x + radius, y);
                this.arcTo(x + width, y, x + width, y + height, radius);
                this.arcTo(x + width, y + height, x, y + height, radius);
                this.arcTo(x, y + height, x, y, radius);
                this.arcTo(x, y, x + width, y, radius);
                this.closePath();
                return this;
            };
        }

        // Variables globales
        let tallaSeleccionada = "";

        // Mostrar login inicialmente
        document.getElementById("login").style.display = "block";
        
        function login(){
            const user = document.getElementById("usuario").value.trim();
            const pass = document.getElementById("clave").value.trim();
            const error = document.getElementById("error");
            
            // Credenciales - modificar seg√∫n necesidad
            const USUARIO = "susana";
            const CLAVE = "ily";
            
            if(user === USUARIO && pass === CLAVE){
                document.getElementById("login").style.display = "none";
                document.getElementById("app").style.display = "block";
            } else {
                error.style.display = "block";
            }
        }
        
        /* Preview de imagen */
        const preview = document.getElementById("preview");
        const toggleMarco = document.getElementById("toggleMarco");
        
        document.getElementById('productoInput').addEventListener("change", e=>{
            const file = e.target.files[0];
            if(file){
                const reader = new FileReader();
                reader.onload = event=>{
                    preview.src = event.target.result;
                    preview.style.display="block";
                    actualizarVistaPrevia();
                };
                reader.readAsDataURL(file);
            }
        });
        
        /* Funci√≥n para mostrar/ocultar tallas seg√∫n categor√≠a */
        function toggleTallas() {
            const categoria = document.getElementById("categoria").value;
            const contenedorTallas = document.getElementById("contenedorTallas");
            
            // Ocultar todos los grupos de tallas primero
            document.querySelectorAll('.talla-group').forEach(group => {
                group.classList.add('hidden');
            });
            
            // Mostrar solo para categor√≠as que requieren tallas
            if (categoria === "Dama" || categoria === "Caballero" || categoria === "Ni√±o" || categoria === "Ni√±a" || 
                categoria === "Accesorios" || categoria === "Bolsos y Mochilas") {
                contenedorTallas.classList.remove("hidden");
                
                // Mostrar el grupo de tallas correspondiente
                if (categoria === "Dama") {
                    document.getElementById('tallasDama').classList.remove('hidden');
                } else if (categoria === "Caballero") {
                    document.getElementById('tallasCaballero').classList.remove('hidden');
                } else if (categoria === "Ni√±o" || categoria === "Ni√±a") {
                    document.getElementById('tallasNinos').classList.remove('hidden');
                } else if (categoria === "Accesorios" || categoria === "Bolsos y Mochilas") {
                    document.getElementById('tallasZapatos').classList.remove('hidden');
                }
            } else {
                contenedorTallas.classList.add("hidden");
                tallaSeleccionada = ""; // Limpiar talla seleccionada
                document.querySelectorAll(".size-buttons button").forEach(b => b.classList.remove("active"));
            }
            
            generarHashtags();
            generarTextoDescripcion();
        }
        
        /* Selecci√≥n de talla */
        function selectSize(button, talla){
            // Desactivar todos los botones del mismo grupo
            const parentGroup = button.closest('.talla-group');
            parentGroup.querySelectorAll('button').forEach(b => b.classList.remove('active'));
            
            // Activar el bot√≥n seleccionado
            button.classList.add('active');
            tallaSeleccionada = talla;
            
            generarTextoDescripcion();
            actualizarVistaPrevia();
        }
        
        /* Generar hashtags autom√°ticos */
        function generarHashtags() {
            const categoria = document.getElementById("categoria").value;
            const condicion = document.getElementById("condicion").value;
            let hashtags = "";
            
            // Hashtags base
            hashtags += "#EcoEstilo #ModaSostenible #SegundaMano ";
            
            // Hashtags por categor√≠a
            switch(categoria) {
                case "Dama":
                    hashtags += "#ModaMujer #RopaMujer #ModaFemenina #RopaUsada #RopaAmericana ";
                    break;
                case "Caballero":
                    hashtags += "#ModaHombre #RopaHombre #EstiloMasculino #RopaUsada #RopaAmericana ";
                    break;
                case "Ni√±o":
                    hashtags += "#ModaInfantil #RopaNi√±os #RopaNino #RopaUsada #RopaAmericana ";
                    break;
                case "Ni√±a":
                    hashtags += "#ModaInfantil #RopaNi√±as #RopaNina #RopaUsada #RopaAmericana ";
                    break;
                case "Juguete":
                    hashtags += "#Juguetes #Juegos #Diversi√≥nInfantil #JuguetesUsados ";
                    break;
                case "Accesorios":
                    hashtags += "#AccesoriosModa #Complementos #Estilo #AccesoriosUsados ";
                    break;
                case "Bolsos y Mochilas":
                    hashtags += "#Bolsos #Mochilas #Accesorios #BolsosUsados #MochilasUsadas ";
                    break;
                default:
                    hashtags += "#Moda #Estilo #RopaUsada #RopaAmericana ";
            }
            
            // Hashtags por condici√≥n
            if (condicion === "Nuevo") {
                hashtags += "#ProductoNuevo #Nuevo #SiempreNuevo ";
            } else {
                hashtags += "#SegundaMano #UsadoComoNuevo #ModaCircular #RopaEcologica ";
            }
            
            // Hashtags adicionales
            hashtags += "#ModaEcon√≥mica #Ofertas #Ganga #ComprasInteligentes #CostaRica #ModaCR";
            
            document.getElementById("hashtags").value = hashtags;
        }
        
        /* Generar texto descriptivo */
        function generarTextoDescripcion() {
            const categoria = document.getElementById("categoria").value;
            const descripcion = document.getElementById("descripcion").value;
            const marca = document.getElementById("marca").value;
            const precio = document.getElementById("precio").value;
            const condicion = document.getElementById("condicion").value;
            
            let emojiCategoria = "üëö";
            let textoCategoria = "¬°Elegancia y estilo a un precio incre√≠ble!";
            
            // Definir emoji y texto seg√∫n categor√≠a
            switch(categoria) {
                case "Dama":
                    emojiCategoria = "üëö";
                    textoCategoria = "¬°Elegancia y estilo a un precio incre√≠ble!";
                    break;
                case "Caballero":
                    emojiCategoria = "üëî";
                    textoCategoria = "¬°Estilo masculino con las mejores marcas!";
                    break;
                case "Ni√±o":
                    emojiCategoria = "üë¶";
                    textoCategoria = "¬°Ropa divertida y c√≥moda para los m√°s peque√±os!";
                    break;
                case "Ni√±a":
                    emojiCategoria = "üëß";
                    textoCategoria = "¬°Ropa adorable para las princesas de la casa!";
                    break;
                case "Juguete":
                    emojiCategoria = "üß∏";
                    textoCategoria = "¬°Diversi√≥n garantizada para los m√°s peque√±os!";
                    break;
                case "Accesorios":
                    emojiCategoria = "üï∂Ô∏è";
                    textoCategoria = "¬°Complementa tu look con nuestros accesorios!";
                    break;
                case "Bolsos y Mochilas":
                    emojiCategoria = "üëú";
